@{
    ViewData["Title"] = "Productos Page";
}

@model List<Presupuesto>

<section>
    <h1 class="display-4">Presupuestos</h1>
    <hr>
    @{
        foreach (Presupuesto presupuesto in Model)
        {
            <div class="mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h5 class="card-title">@presupuesto.NombreDestinatario</h5>
                            <p class="card-text">@presupuesto.FechaCreacion.Day/@presupuesto.FechaCreacion.Month/@presupuesto.FechaCreacion.Year</p>
                        </div>
                        @{
                            if (presupuesto.Detalle != null)
                            {
                                <ul class="list-group list-group-flush">
                                    @{
                                        foreach (PresupuestoDetalle detalle in presupuesto.Detalle)
                                        {
                                            <li class="list-group-item">An item</li>
                                        }
                                    }
                                </ul>
                            }
                        }
                        
                    </div>
                </div>
            </div>
        }
    }
</section>