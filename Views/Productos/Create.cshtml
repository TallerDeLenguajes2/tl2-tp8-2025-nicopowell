@{
    ViewData["Title"] = "Crear Producto";
}

@model MVC.ViewModels.ProductoViewModel

<section>
    <h1 class="display-4">Crear producto</h1>
    <hr>
    <form asp-action="Create" asp-controller="Productos" method="post">
        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label">Descripcion</label>
            <input asp-for="Descripcion" class="form-control">
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Precio" class="form-label">Precio</label>
            <input asp-for="Precio" class="form-control">
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Crear</button>
    </form>
</section>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }